{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "preLaunchTask": "zig-test-bin",
            "program": "${workspaceFolder}/zig-out/bin/test.bin",
            "args": [],
            "cwd": "${workspaceFolder}/",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Example",
            "initCommands": [
                "shell poetry run pydust debug ${file}"
            ],
            "program": "zig-out/bin/debug.bin",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "LLDB Python",
            "program": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "-s",
                "-k",
                // "test_notebook2",
                "test_recompute",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Default Bin",
            "program": "${workspaceFolder}/zig-out/bin/ziggypydust",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}